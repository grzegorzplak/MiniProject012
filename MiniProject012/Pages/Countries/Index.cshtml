@page
@model MiniProject012.Pages.Countries.IndexModel
@{
}

<h2 class="my-3">List of countries</h2>

<div class="row mb-3">
    <div class="col">
        <a class="btn btn-primary" href="/Countries/Create">New country</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Country Name</th>
            <th>Area (km<sup>2</sup>)</th>
            <th>Population</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.countries)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CountryName</td>
                <td>@item.Area</td>
                <td>@item.Population</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Countries/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Countries/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>